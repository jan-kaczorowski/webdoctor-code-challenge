<div class="card mt-3">
  <h5 class="card-header">
    New Message
  </h5>

  <div class="card-body">
    <%= form_for @message, method: :post do |f| %>
      <div class="mb-3">
        <%= f.hidden_field :previous_message_id, value: @previous_message_id %>
        <%= f.text_area :body, class: "form-control", rows: 3 %>
      </div>

      <div class="d-flex">
        <%= f.submit 'Send Message', class: 'btn btn-primary me-auto' %>
        <%= link_to t('common.back'), :back, class: 'btn btn-link' %>
      </div>


    <% end %>
  </div>

</divo
